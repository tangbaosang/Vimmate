syntax on				"语法高亮
set nu					"显示行号
set tabstop=4			"设置Tab的长度=4
set shiftwidth=4		"设置自动缩进的长度=4
set autoindent			"继承上一行的缩进
setlocal noswapfile		"不要生成SWAP文件
set bufhidden=hide		"不要生成SWAP文件
colorscheme molokai		"设置主题为Molokai
set guifont=Monaco:h12	"设置字体为Monaco 大小为12
map <F3> :NERDTreeMirror<CR>
map <F3> :NERDTreeToggle<CR>
